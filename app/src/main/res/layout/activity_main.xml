<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@drawable/imc" />

    <TextView
        android:text="@string/title_app"
        style="@style/style_text_page_main"
        android:textSize="22sp"/>
    <TextView
        android:text="@string/subtitle_app"
        style="@style/style_text_page_main"
        android:layout_marginTop="1dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:background="@android:color/holo_green_dark"
        android:gravity="center_vertical">


        <TextView
            android:id="@+id/textView2"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="O que vamos calcular hoje"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/btMassaCorporal"
            android:layout_marginTop="32dp"
            android:layout_width="@dimen/dimencao_init_project_imc"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="@string/bt_massa_corporal"
            app:backgroundTint="@null"
            android:layout_gravity="center"
            android:textColor="@android:color/holo_green_dark"
            android:background="@drawable/bt_style_write"/>

        <Button
            android:id="@+id/btNeceCalorica"
            android:layout_marginTop="32dp"
            android:layout_width="@dimen/dimencao_init_project_imc"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAllCaps="false"
            app:backgroundTint="@null"
            android:text="@string/bt_nece_calorica"
            android:textColor="@android:color/holo_green_dark"
            android:background="@drawable/bt_style_write"/>
    </LinearLayout>

</LinearLayout>
